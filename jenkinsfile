pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'make build' // Example build command
            }
        }
        
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'make test' // Example test command
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'make deploy' // Example deploy command
            }
        }
    }
}
